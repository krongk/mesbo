<script type="text/javascript">
  $(function() {
      var offset = $("#m_header_nav").offset();
      var topPadding = -50;
      $(window).scroll(function() {
          if ($(window).scrollTop() > offset.top) {
              $("#m_header_nav").stop().animate({
                  marginTop: $(window).scrollTop() - offset.top + topPadding
              });
          } else {
              $("#m_header_nav").stop().animate({
                  marginTop: -50
              });
          };
      });
  });
</script>

